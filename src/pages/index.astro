---
import Layout from '../layouts/Layout.astro';
import InteractiveArea from '../components/InteractiveArea';
---

<Layout>
    <style>
        html, body, .page-root {
            height: 100%;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
        .page-root {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .middle {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            text-align: center;
            margin-top: 32px;
            flex: 1 0 auto;
        }
        footer {
            margin-top: 48px;
            padding: 24px 0 12px 0;
            width: 100%;
            background: var(--bg);
            color: var(--text);
            text-align: center;
            border-top: 1px solid #ccc;
            font-size: 1.2rem;
            flex-shrink: 0;
        }
        footer a {
            color: var(--text);
            margin: 0 18px;
            text-decoration: underline;
            transition: color 0.2s;
            font-size: 1.2em;
        }
        footer a:hover {
            color: #0077cc;
        }
    </style>
    <div class="page-root">
        <div class="middle">
            <h1>LIU Tenta statistik</h1>
            <InteractiveArea client:load />
        </div>
        <footer>
            <a href="https://github.com/lukasabbe/LIU-Tentor-API" target="_blank" rel="noopener">LIU tentor API</a>
			<a href="https://github.com/lukasabbe/LIU-Resultat-Statistik" target="_blank" rel="noopener">Github</a>
			<a href="https://lukasabbe.com" target="_blank" rel="noopener">Om mig</a>
        </footer>
    </div>
</Layout>